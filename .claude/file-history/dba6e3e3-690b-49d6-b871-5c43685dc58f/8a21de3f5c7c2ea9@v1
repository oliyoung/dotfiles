#!/bin/bash
set -e

echo "Building Antora site..."

# Install dependencies if needed
if [ ! -d "node_modules" ]; then
  echo "Installing dependencies..."
  npm install
fi

# Build the site
echo "Running Antora build..."
npx antora antora-playbook.yml

echo "âœ“ Build complete!"
echo "Site generated in: build/site/"
echo ""
echo "To view the site locally, run:"
echo "  npm run serve"
echo ""
echo "Or open build/site/index.html in your browser"
