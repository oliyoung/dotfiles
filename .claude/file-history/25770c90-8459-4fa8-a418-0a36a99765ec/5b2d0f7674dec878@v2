/*
 * ProductCatalog Domain Definition
 * =================================
 *
 * See product-catalog.adoc for plain English explanation and domain structure documentation.
 */

Domain ProductCatalogDomain {
    domainVisionStatement = "Enable product discovery, search, and information retrieval across all retail channels (POS, mobile, web, DMB)"

    Subdomain ProductDiscovery {
        type = CORE_DOMAIN
        domainVisionStatement = "Provide product search, filtering, and browsing capabilities tailored to customer context and channel"
    }

    Subdomain ProductInformation {
        type = SUPPORTING_DOMAIN
        domainVisionStatement = "Deliver accurate, up-to-date product details, pricing, and availability across channels"
    }

    Subdomain DigitalMenuBoard {
        type = SUPPORTING_DOMAIN
        domainVisionStatement = "Display dynamic product offerings on digital menu boards with location-specific pricing and availability"
    }

    Subdomain ProductRecommendation {
        type = SUPPORTING_DOMAIN
        domainVisionStatement = "Surface relevant products based on customer context, location, and purchase history"
    }
}
