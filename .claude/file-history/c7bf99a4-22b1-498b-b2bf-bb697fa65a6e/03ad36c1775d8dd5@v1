      "example": "vci_xyz789abc"
    },
    "status": {
      "type": "string",
      "enum": [
        "ACTIVE",
        "SUSPENDED",
        "CLOSED"
      ],
      "description": "New profile status after update.",
      "example": "CLOSED"
    },
    "previousStatus": {
      "type": "string",
      "enum": [
        "ACTIVE",
        "SUSPENDED",
        "CLOSED"
      ],
      "description": "Profile status before update.",
      "example": "ACTIVE"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Status update timestamp (ISO 8601).",
      "example": "2025-12-10T15:00:00Z"
    },
    "reason": {
      "type": "string",
      "enum": [
        "CUSTOMER_REQUEST",
        "FRAUD_PREVENTION",
        "GDPR_ERASURE",
        "ADMIN_ACTION"
      ],
      "description": "Reason for status change.",
      "example": "CUSTOMER_REQUEST"
    }
  },
  "required": [
    "vivaConsumerId",
    "status",
    "previousStatus",
    "updatedAt"
  ],
